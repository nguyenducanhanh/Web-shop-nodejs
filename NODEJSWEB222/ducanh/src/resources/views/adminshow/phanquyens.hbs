
 {{> headerAd}} 
  <!-- Nội dung -->
  <div  id="content">


    <!-- Bảng dữ liệu của bạn ở đây -->
    <div class="mt-4">
      <h3 style="color: rgb(255, 0, 0);">  ACCOUNTS LIST </h3>
      {{!-- <a type="submit" href="/phanquyens/admin/create" class="btn btn-danger">MORE</a> --}}
    </div>
    <table class="table mt-4">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">User Name </th>
          <th scope="col">Password</th>
          <th scope="col">Role </th>
   
          <th  scope="col" colspan="2"> <p style="margin-left: 60px; color:red"> Actions</p></th>
        </tr>
      </thead>
      <tbody>
        {{#each phanquyens}}
        <tr>
          <th scope="row">{{sum @index 1 }}</th>
          <td>{{this.tendangnhap}}</td>
          <td>{{this.password}}</td>
          <td>{{this.role}}</td>
          <td>{{this.createdAt}}</td>
              <td>
  <div style="display: flex; flex-direction: row;">
    <a style="height: 40px; width: 70px; margin-right: 5px;" class="btn btn-xs btn-info" href="/phanquyens/{{this._id}}/edit">EDIT</a>
    <a style="height: 40px; width: 70px;" class="btn btn-xs btn-danger" href="" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-phanquyen-modal">DELETE</a>
  </div>
</td>
        
        </tr>
        {{/each}}
      </tbody>
    </table>

 


</div>

  <div id="delete-phanquyen-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">delete ?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete it ?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button id="btn-delete-phanquyen" type="button" class="btn btn-danger">Delete</button>
        </div>
      </div>
    </div>
  </div>

  <form name="delete-phanquyen-form" method="POST"></form>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var phanquyenId;
      var deleteForm = document.forms['delete-phanquyen-form'];
      var btnDeletephanquyen = document.getElementById('btn-delete-phanquyen');

      $('#delete-phanquyen-modal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        phanquyenId = button.data('id');
      });

      btnDeletephanquyen.onclick = function () {
        deleteForm.action = '/phanquyens/' + phanquyenId + '?_method=DELETE';
        deleteForm.submit();
      }
    });
  </script>


  </table>
  
  </div>


</body>

</html>