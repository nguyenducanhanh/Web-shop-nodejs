
 {{> headerAd}} 
  <!-- Nội dung -->
  <div  id="content">


    <!-- Bảng dữ liệu của bạn ở đây -->
      <div class="mt-4" style="display: flex; align-items: center;">
  <h3 style="color: rgb(255, 0, 0); margin-right: 10px;"> MANUFACTURERS </h3>
  <a style="margin-left: 700px;" type="submit" href="/hangsanxuats/admin/create" class="btn btn-danger">MORE</a>
</div>
   
    <table class="table mt-4">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Manufacturer Name </th>
          <th scope="col" >Date</th>
            <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each hangsanxuats}}
        <tr>
          <th scope="row">{{sum @index 1 }}</th>
          <td>{{this.name}}</td>
          <td>{{this.createdAt}}</td>
           <td>
  <div style="display: flex; flex-direction: row;">
    <a style="height: 40px; width: 70px; margin-right: 10px;" class="btn btn-xs btn-info" href="/hangsanxuats/{{this._id}}/edit">EDIT</a>
    <a style="height: 40px; width: 70px;" class="btn btn-xs btn-danger" href="" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-hangsanxuat-modal">DELETE</a>
  </div>
</td>
         
        </tr>
        {{/each}}
      </tbody>
    </table>

 
 



</div>

  <div id="delete-hangsanxuat-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">delete?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete it  ?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button id="btn-delete-hangsanxuat" type="button" class="btn btn-danger">Delete</button>
        </div>
      </div>
    </div>
  </div>

  <form name="delete-hangsanxuat-form" method="POST"></form>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var hangsanxuatId;
      var deleteForm = document.forms['delete-hangsanxuat-form'];
      var btnDeleteHangsanxuat = document.getElementById('btn-delete-hangsanxuat');

      $('#delete-hangsanxuat-modal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        hangsanxuatId = button.data('id');
      });

      btnDeleteHangsanxuat.onclick = function () {
        deleteForm.action = '/hangsanxuats/' + hangsanxuatId + '?_method=DELETE';
        deleteForm.submit();
      }
    });
  </script>


  </table>
  
  </div>


</body>

</html>