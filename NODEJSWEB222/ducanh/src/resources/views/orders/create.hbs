
 {{> headerAd}} 
  <div id="content">
<div class="mt-4">
    <h3>THÊM ĐƠN HÀNG  </h3>
    <form method="POST" action="/orders/store" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Tên sản phẩm  </label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="ThongTin">Mô tả</label>
            <input type="text" class="form-control" id="ThongTin" name="ThongTin">
        </div>
        <div class="form-group">
            <label for="image">Ảnh</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/*">
        </div>
          <div class="form-group">
            <label for="GiaCu">Giá cũ </label>
            <input type="text" class="form-control" id="GiaCu" name="GiaCu">
        </div>
          <div class="form-group">
            <label for="GiaMoi">Giá Mới </label>
            <input type="text" class="form-control" id="GiaMoi" name="GiaMoi">
        </div>
        <div class="form-group">
            <label for="HangSX">Hãng sản xuất </label>
            <input type="text" class="form-control" id="HangSX" name="HangSX">
        </div>
        <div class="form-group">
            <label for="slug">Link ten trang chi tiet</label>
            <input type="text" class="form-control" id="slug" name="slug" required>
        </div>
        <button type="submit" class="btn btn-primary">Thêm </button>
    </form>
</div>

</div>