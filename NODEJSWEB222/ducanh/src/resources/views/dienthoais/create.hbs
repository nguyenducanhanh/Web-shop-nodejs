



{{> headerAd}} 
<div id="content">
    <div class="mt-4">
        <h3 style="color:red">CREATE NEW PRODUCT</h3>
        <form method="POST" action="/dienthoais/store" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Product Name</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="form-group">
                <label for="ThongTin">Description</label>
                <input type="text" class="form-control" id="ThongTin" name="ThongTin">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" class="form-control" id="image" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <label for="GiaCu">Old Cost</label>
                <input type="text" class="form-control" id="GiaCu" name="GiaCu">
            </div>
            <div class="form-group">
                <label for="GiaMoi">New Price</label>
                <input type="text" class="form-control" id="GiaMoi" name="GiaMoi">
            </div>
           <div class="form-group">
    <label for="HangSX">Manufacturer</label>
    <select class="form-control" id="HangSX" name="HangSX">
        {{#each hangsanxuats}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>
</div>

            <br>
            <div class="form-group">
                <label for="slug">Product Link</label>
                <input type="text" class="form-control" id="slug" name="slug" required>
            </div>
            <button type="submit" class="btn btn-primary">ADD</button>
        </form>
    </div>
</div>
